{% extends 'base.html.twig' %}
{% block title %}Project Managers{% endblock %}

{% block body %}
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #1abc9c">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('managers') }}">
                    <h4>S&P</h4>
                </a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('managers') }}" style="font-weight: bold">Project Managers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('consultants') }}">Consultants</a>
                        </li>
                    </ul>
                </div>
                <a class="navbar-brand" >
                    <span class="material-icons">settings</span>
                </a>
                <a class="navbar-brand" >
                    <span class="material-icons">logout</span>
                </a>
            </div>
        </nav>

        <div class="container" style="padding: 10px">
            <div>
                <a class="btn btn-secondary" href="{{ path('createManager') }}">Ajouter un nouveau Project Manager</a>
            </div>
            <table class="table">
                <tr>
                    <th scope="col">Code</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Seniorit√©</th>
                    <th scope="col">Projets actuels</th>
                    <th scope="col">Actions</th>
                </tr>

                {%   for pm in  project_managers  %}
                    <tr>
                        <td>
                            {{ pm.id }}
                        </td>
                        <td>
                            {{ pm.Name }}
                        </td>
                        <td>
                            {{ pm.Seniority }}
                        </td>
                        <td>
                            {{ pm.Projects }}
                        </td>
                        <td>
                            <button type="button" class="btn" onclick="window.location.href='{{ path('editManager', {'id': pm.id}) }}'">
                                <span class="material-icons">edit</span>
                            </button>
                            <button type="button" class="btn" onclick="window.location.href='{{ path('deleteManager', {'id': pm.id}) }}'">
                                <span class="material-icons">delete</span>
                            </button>
                        </td>
                    </tr>
                {% endfor %}

            </table>
        </div>
    </div>
{% endblock %}
