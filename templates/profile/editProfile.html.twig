{% extends 'base.html.twig' %}

{% block title %}Modifier votre profil{% endblock %}

{% block body %}
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #1abc9c">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('managers') }}">
                    <h4>S&P</h4>
                </a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('managers') }}" style="font-weight: bold">Project Managers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('consultants') }}">Consultants</a>
                        </li>
                    </ul>
                </div>
                <a class="navbar-brand" >
                    <span class="material-icons">settings</span>
                </a>
                <a class="navbar-brand" >
                    <span class="material-icons">logout</span>
                </a>
            </div>
        </nav>

        <div class="container" style="padding: 10px">
            <h1>Modifier votre profil</h1>
            {{ form_start(form) }}

            <br/>
            <div class="row">
                <div class="col">
                    {{ form_row(form.name, {'label': 'Nom'}) }}
                </div>
                <div class="col">
                    {{ form_row(form.Email, {'label': 'Email'}) }}
                </div>
            </div>

            <br/>
            <div class="row">
                <div class="col">
                    {{ form_row(form.Password, {'label': 'Password'}) }}
                </div>
            </div>

            <br/>
            <button type="submit" class="btn" style="width: 100%; background-color: #1abc9c; color: white">Modifier</button>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock body %}